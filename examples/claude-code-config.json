{
  "mcpServers": {
    "sudo-mcp": {
      "command": "/usr/bin/sudo-mcp"
    },
    "sudo-mcp-custom": {
      "command": "/usr/bin/sudo-mcp",
      "args": [
        "--blocklist-file",
        "/home/YOUR_USERNAME/.config/sudo-mcp/blocklist.json",
        "--timeout",
        "30"
      ]
    },
    "sudo-mcp-no-blocklist": {
      "command": "/usr/bin/sudo-mcp",
      "args": [
        "--no-blocklist"
      ]
    }
  }
}
